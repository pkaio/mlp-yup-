# Backend environment configuration for local development

PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# PostgreSQL connection (adjust if running elsewhere)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yup
DB_USER=postgres
DB_PASSWORD=postgres

# JWT secret used to sign access tokens
JWT_SECRET=change-me-super-secret-key

# SMTP credentials (update with your provider details)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM="Y'UP <no-reply@yup.app>"
SUPPORT_EMAIL=support@yup.app

# Verification flow timing
VERIFICATION_CODE_TTL_MINUTES=15
VERIFICATION_RESEND_COOLDOWN_SECONDS=90

# Optional branding
APP_NAME="Y'UP"
